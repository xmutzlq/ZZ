<?xml version="1.0" encoding="utf-8"?>
<com.bop.zz.photo.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bop.zz.photo.widget.GFImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gf_default_photo" />

    <FrameLayout
        android:id="@+id/fl_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp" >

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gf_done" />
    </FrameLayout>

</com.bop.zz.photo.widget.SquareLayout>